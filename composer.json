{
	"authors": [
		{
			"name": "LaTableRouge",
			"homepage": "https://mlnop.fr",
			"role": "Simple man"
		}
	],
	"require-dev": {
		"friendsofphp/php-cs-fixer": "3.91.1",
		"phpstan/phpstan": "^2.1.32",
		"szepeviktor/phpstan-wordpress": "2.0.3",
		"squizlabs/php_codesniffer": "^4.0.1"
	},
	"scripts": {
		"prettier:php": "vendor/bin/php-cs-fixer fix -v --show-progress=dots --using-cache=no --config=linters/.php-cs-fixer.php acf-barcodescanner.php fields",
		"lint:php": "vendor/bin/phpstan --configuration=linters/phpstan.neon analyse -v --memory-limit=2048M acf-barcodescanner.php fields",
		"lint-staged:php": [
			"vendor/bin/phpstan --configuration=linters/phpstan.neon analyse -v --memory-limit=2048M",
			"vendor/bin/php-cs-fixer fix -v --show-progress=dots --using-cache=no --config=linters/.php-cs-fixer.php"
		]
	}
}
